    <script>
        let currentPosition = null;
        let gpsCheckInterval = null;
        let deviceId = null;

        // Generar o recuperar ID √∫nico del dispositivo
        function getDeviceId() {
            let storedDeviceId = localStorage.getItem('device_marcacion_id');
            
            if (!storedDeviceId) {
                // Generar ID √∫nico basado en caracter√≠sticas del navegador
                const canvas = document.createElement('canvas');
                const ctx = canvas.getContext('2d');
                ctx.textBaseline = 'top';
                ctx.font = '14px Arial';
                ctx.textBaseline = 'alphabetic';
                ctx.fillStyle = '#f60';
                ctx.fillRect(125, 1, 62, 20);
                ctx.fillStyle = '#069';
                ctx.fillText('Device ID', 2, 15);
                
                const canvasFingerprint = canvas.toDataURL();
                const screenFingerprint = `${screen.width}x${screen.height}x${screen.colorDepth}`;
                const navigatorFingerprint = `${navigator.userAgent}|${navigator.language}|${navigator.platform}`;
                const timezoneOffset = new Date().getTimezoneOffset();
                
                const combinedFingerprint = `${canvasFingerprint}|${screenFingerprint}|${navigatorFingerprint}|${timezoneOffset}`;
                
                // Generar hash simple
                let hash = 0;
                for (let i = 0; i < combinedFingerprint.length; i++) {
                    const char = combinedFingerprint.charCodeAt(i);
                    hash = ((hash << 5) - hash) + char;
                    hash = hash & hash;
                }
                
                storedDeviceId = 'DEV_' + Math.abs(hash).toString(36) + '_' + Date.now().toString(36);
                localStorage.setItem('device_marcacion_id', storedDeviceId);
            }
            
            return storedDeviceId;
        }

        // Inicializar device ID
        deviceId = getDeviceId();
        console.log('Device ID:', deviceId);

        // Verificar estado del GPS continuamente
        function verificarGPS() {
            if (!navigator.geolocation) {
                mostrarError('Tu navegador no soporta geolocalizaci√≥n');
                return;
            }

            navigator.geolocation.getCurrentPosition(
                (position) => {
                    currentPosition = {
                        lat: position.coords.latitude,
                        lng: position.coords.longitude
                    };
                    ocultarAlertaGPS();
                },
                (error) => {
                    currentPosition = null;
                    mostrarAlertaGPS(error);
                },
                {
                    enableHighAccuracy: true,
                    timeout: 10000,
                    maximumAge: 0
                }
            );
        }

        function mostrarAlertaGPS(error) {
            let mensaje = '';
            switch(error.code) {
                case error.PERMISSION_DENIED:
                    mensaje = '‚ö†Ô∏è GPS DESACTIVADO: Por favor, activa la ubicaci√≥n en tu dispositivo y permite el acceso en tu navegador.';
                    break;
                case error.POSITION_UNAVAILABLE:
                    mensaje = '‚ö†Ô∏è GPS NO DISPONIBLE: No se puede obtener tu ubicaci√≥n. Verifica que el GPS est√© activado.';
                    break;
                case error.TIMEOUT:
                    mensaje = '‚ö†Ô∏è TIEMPO AGOTADO: El GPS est√° tardando mucho. Verifica que est√© activado.';
                    break;
                default:
                    mensaje = '‚ö†Ô∏è ERROR DE GPS: No se puede obtener tu ubicaci√≥n.';
            }
            
            const messageDiv = document.getElementById('message');
            messageDiv.innerHTML = `
                <div class="error" style="display: flex; align-items: center; gap: 10px;">
                    <div style="font-size: 24px;">üìç</div>
                    <div>
                        <strong>${mensaje}</strong>
                        <br><small>Las marcaciones requieren tu ubicaci√≥n GPS activada para registrar tu posici√≥n exacta.</small>
                        <br><br>
                        <button onclick="verificarGPS()" class="btn" style="padding: 8px 15px; font-size: 14px; margin-top: 5px;">
                            üîÑ Verificar GPS Nuevamente
                        </button>
                    </div>
                </div>
            `;
        }

        function ocultarAlertaGPS() {
            const messageDiv = document.getElementById('message');
            if (messageDiv.innerHTML.includes('GPS')) {
                messageDiv.innerHTML = '';
            }
        }

        // Verificar GPS al cargar y cada 30 segundos
        verificarGPS();
        gpsCheckInterval = setInterval(verificarGPS, 30000);

        function marcar(tipo) {
            const dni = document.getElementById('dni').value.trim();
            
            if (!dni) {
                mostrarError('Por favor, ingresa tu DNI');
                return;
            }

            // Verificaci√≥n cr√≠tica del GPS antes de marcar
            if (!currentPosition) {
                mostrarModalError('‚ùå GPS REQUERIDO<br><br>Para realizar la marcaci√≥n necesitas tener el GPS activado.<br><br><strong>Pasos para activar:</strong><br>1. Activa la ubicaci√≥n en tu dispositivo<br>2. Permite el acceso en tu navegador<br>3. Haz clic en el bot√≥n de verificar GPS<br>4. Intenta marcar nuevamente');
                verificarGPS(); // Intentar obtener ubicaci√≥n nuevamente
                return;
            }

            // Solicitar ubicaci√≥n actualizada antes de marcar
            navigator.geolocation.getCurrentPosition(
                (position) => {
                    currentPosition = {
                        lat: position.coords.latitude,
                        lng: position.coords.longitude
                    };
                    procesarMarcacion(dni, tipo);
                },
                (error) => {
                    mostrarModalError('‚ùå ERROR DE GPS<br><br>No se pudo obtener tu ubicaci√≥n actual. Por favor:<br><br>1. Verifica que el GPS est√© activado<br>2. Permite el acceso a la ubicaci√≥n<br>3. Intenta nuevamente<br><br><strong>C√≥digo de error:</strong> ' + error.code);
                },
                {
                    enableHighAccuracy: true,
                    timeout: 10000,
                    maximumAge: 0
                }
            );
        }

        function procesarMarcacion(dni, tipo) {
            mostrarLoading();

            const formData = new FormData();
            formData.append('dni', dni);
            formData.append('tipo_marcacion', tipo);
            formData.append('lat', currentPosition.lat);
            formData.append('lng', currentPosition.lng);
            formData.append('device_id', deviceId);
            formData.append('user_agent', navigator.userAgent);

            fetch('procesar_marcacion.php', {
                method: 'POST',
                body: formData
            })
            .then(response => response.json())
            .then(data => {
                if (data.success) {
                    mostrarModalExito(data.data, tipo);
                    document.getElementById('dni').value = '';
                } else {
                    mostrarModalError(data.message);
                }
            })
            .catch(error => {
                mostrarModalError('Error de conexi√≥n. Intenta nuevamente.');
            });
        }

        function mostrarModalExito(data, tipo) {
            const iconos = {
                'entrada': '‚úÖ',
                'salida': 'üëã',
                'salida_refrigerio': '‚òï',
                'entrada_refrigerio': 'üçΩÔ∏è',
                'entrada_campo': 'üöó',
                'salida_campo': 'üè¢'
            };

            const titulos = {
                'entrada': 'Entrada Registrada',
                'salida': 'Salida Registrada',
                'salida_refrigerio': 'Salida a Refrigerio',
                'entrada_refrigerio': 'Regreso de Refrigerio',
                'entrada_campo': 'Salida a Campo',
                'salida_campo': 'Regreso de Campo'
            };

            document.getElementById('modalIcon').textContent = iconos[tipo];
            document.getElementById('modalTitle').textContent = titulos[tipo];
            document.getElementById('modalBody').innerHTML = `
                <div class="modal-info">
                    <p><strong>Empleado:</strong> ${data.nombre}</p>
                    <p><strong>DNI:</strong> ${data.dni}</p>
                    <p><strong>Fecha:</strong> ${data.fecha}</p>
                    <p><strong>Hora:</strong> ${data.hora}</p>
                    ${data.estado_horario ? `<p style="color: ${data.color_estado}; font-weight: 600;"><strong>Estado:</strong> ${data.estado_horario}</p>` : ''}
                    <p><strong>Ubicaci√≥n:</strong> ${data.direccion || 'Obteniendo direcci√≥n...'}</p>
                    <p><strong>Coordenadas:</strong> ${data.latitud}, ${data.longitud}</p>
                </div>
                <p style="color: #059669; font-weight: 600;">¬°Marcaci√≥n exitosa!</p>
            `;

            document.getElementById('marcacionModal').style.display = 'block';
        }

        function mostrarModalError(mensaje) {
            document.getElementById('modalIcon').textContent = '‚ùå';
            document.getElementById('modalTitle').textContent = 'Error';
            document.getElementById('modalBody').innerHTML = `
                <div class="error">
                    ${mensaje}
                </div>
            `;
            document.getElementById('marcacionModal').style.display = 'block';
        }

        function mostrarLoading() {
            document.getElementById('modalIcon').textContent = '';
            document.getElementById('modalTitle').textContent = 'Procesando...';
            document.getElementById('modalBody').innerHTML = '<div class="loading"><div class="spinner"></div><p style="margin-top: 15px;">Registrando marcaci√≥n...</p></div>';
            document.getElementById('marcacionModal').style.display = 'block';
        }

        function mostrarError(mensaje) {
            const messageDiv = document.getElementById('message');
            messageDiv.innerHTML = `<div class="error">${mensaje}</div>`;
            setTimeout(() => {
                messageDiv.innerHTML = '';
            }, 3000);
        }

        function cerrarModal() {
            document.getElementById('marcacionModal').style.display = 'none';
        }

        // Cerrar modal al hacer clic fuera
        window.onclick = function(event) {
            const modal = document.getElementById('marcacionModal');
            if (event.target == modal) {
                cerrarModal();
            }
        }

        // Limpiar intervalo al cerrar p√°gina
        window.addEventListener('beforeunload', () => {
            if (gpsCheckInterval) {
                clearInterval(gpsCheckInterval);
            }
        });
    </script>
